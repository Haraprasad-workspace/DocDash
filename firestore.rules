rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ”“ Allow logged-in users to read shops
    match /shops/{shopId} {
      allow read: if request.auth != null;
      // âœ… ADD THIS: Allow the shop owner to CREATE their shop
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      
      // âœ… ADD THIS: Allow the shop owner to UPDATE their details later
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // ğŸ”“ Allow logged-in users to read orders (for queue calc)
    match /orders/{orderId} {
      allow read: if request.auth != null;
    }

    // ğŸ” Allow users to create their own orders
    match /orders/{orderId} {
      allow create: if request.auth != null;
    }

    match /orders/{orderId} {

  // Read: logged-in users (ok for queue calc)
  allow read: if request.auth != null;

  // Create: any logged-in user (student creates order)
  allow create: if request.auth != null;

  // Update: student OR shop owner
  allow update: if request.auth != null
    && (
      request.auth.uid == resource.data.userId ||
      request.auth.uid == resource.data.shopId
    );
}

    // ğŸ” Allow users to read their own user profile
    match /users/{userId} {
      allow read: if request.auth != null
        && request.auth.uid == userId;
    }
  }
}